{
    "name": "laravel/laravel",
    "type": "project",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "^10.0",
        "laravel/sanctum": "^3.2",
        "laravel/tinker": "^2.8",
        "lorisleiva/laravel-actions": "^2.5",
        "spatie/laravel-ciphersweet": "^1.2",
        "spatie/laravel-collection-macros": "^7.12",
        "spatie/laravel-medialibrary": "^10.0.0"
    },
    "require-dev": {
        "driftingly/rector-laravel": "^0.17.0",
        "fakerphp/faker": "^1.9.1",
        "laravel/pint": "^1.9",
        "laravel/sail": "^1.18",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^7.0",
        "pestphp/pest": "^2.3",
        "phpunit/phpunit": "^10.0",
        "rector/rector": "^0.15.25",
        "spatie/laravel-ignition": "^2.0",
        "wulfheart/laravel-actions-ide-helper": "^0.4.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/Helpers/general.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "refactor": "vendor/bin/rector",
        "lint": "vendor/bin/pint",
        "test:refactor": "@refactor --dry-run",
        "test:lint": "@lint --test",
        "test:types": "vendor/bin/phpstan analyse --ansi",
        "test:unit": "vendor/bin/pest --colors=always",
        "test": [
            "@test:refactor",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
